---
import Icon from './icon.astro';

const steps = [
    {
        name: "Inspect and Tweak",
        gif: "/inspect-and-tweak.gif",
    },
    {
        name: "Let Tailor Work",
        gif: "/let-tailor-work.gif",
    },
    {
        name: "Commit Changes",
        gif: "/commit-changes.gif",
    },
];
---

<section class="flex-col flex scroll-mt-24 items-center space-y-2 h-full relative" id="how">
    <h2
      class="flex gradient-text text-center font-extrabold tracking-tighter text-4xl w-full justify-center align-middle items-center"
    >
        <span class="mx-4">Introducing</span>
        <Icon icon="scissor-left" class="w-16 h-16 mr-2" />
        <span>Tailor</span>
        <Icon icon="scissor-right" class="w-16 h-16 ml-2" />

    </h2>
    <div class="w-full md:w-1/2 text-xl">
        {steps.map((step, index) => (
            <div class="flex flex-col items-center space-y-2" key={index}>
                <h3 class="text-2xl font-bold">{step.name}</h3>
                <img src={step.gif} alt={step.name} class="w-full" />
            </div>
        ))}
    </div>
</section>
